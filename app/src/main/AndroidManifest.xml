<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.moyeit.moyeitapp">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_moyeit"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.LoginActivity" android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activity.MoimAddActivity" android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".activity.MoimDetailActivity" android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".activity.BrdAddActivity" android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".activity.BrdDetailActivity" android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".activity.MsMainActivity" android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".activity.MsDetailActivity" android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".activity.SrListActivity" android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".activity.StudyDetailActivity" android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".activity.StudyRegiActivity"/>
        <activity android:name=".activity.InformPopupActivity" android:theme="@android:style/Theme.DeviceDefault.Light.Dialog"/>
    </application>

</manifest>